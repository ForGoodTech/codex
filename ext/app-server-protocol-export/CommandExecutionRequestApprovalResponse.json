{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "ApprovalDecision": {
      "enum": [
        "accept",
        "decline",
        "cancel"
      ],
      "type": "string"
    },
    "CommandExecutionRequestAcceptSettings": {
      "properties": {
        "forSession": {
          "default": false,
          "description": "If true, automatically approve this command for the duration of the session.",
          "type": "boolean"
        }
      },
      "type": "object"
    }
  },
  "properties": {
    "acceptSettings": {
      "anyOf": [
        {
          "$ref": "#/definitions/CommandExecutionRequestAcceptSettings"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "description": "Optional approval settings for when the decision is `accept`. Ignored if the decision is `decline` or `cancel`."
    },
    "decision": {
      "$ref": "#/definitions/ApprovalDecision"
    }
  },
  "required": [
    "decision"
  ],
  "title": "CommandExecutionRequestApprovalResponse",
  "type": "object"
}